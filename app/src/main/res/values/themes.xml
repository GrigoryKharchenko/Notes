<resources>
    <!-- Base application theme. -->
    <style name="Theme.ExampleNotes" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/background_btn_color</item>
        <item name="colorPrimaryVariant">@color/background_btn_color</item>
        <item name="colorOnPrimary">@color/background_btn_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/background_item_color</item>
        <item name="colorSecondaryVariant">@color/background_item_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background_btn_color</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="Text" />

    <style name="Text.Blue">
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="Text.Blue.Ellipsize">
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Text.Blue.Ellipsize.Title">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Blue.Ellipsize.Title.24">
        <item name="android:textSize">@dimen/sp_24</item>
    </style>

    <style name="Text.Blue.Ellipsize.Title.20">
        <item name="android:textSize">@dimen/sp_20</item>
    </style>

    <style name="Text.Blue.Ellipsize.16">
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="WhiteBackgroundLayout">
        <item name="android:background">@color/background_color</item>
    </style>

    <style name="itemBackgroundLayout">
        <item name="android:background">@drawable/item_ripple</item>
    </style>

    <style name="BlueBackgroundLayout" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/background_btn_color</item>
    </style>

    <style name="BlueCheckBox">
        <item name="android:buttonTint">@color/background_btn_color</item>
    </style>

    <style name="BlueLine">
        <item name="android:background">@color/background_view_color</item>
    </style>

    <style name="BlueEditText" parent="Text.Blue">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:gravity">start</item>
        <item name="android:textCursorDrawable">@drawable/cursor_color</item>
        <item name="android:textColorHint">@color/background_btn_color</item>
    </style>

    <style name="MaterialLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/background_btn_color</item>
        <item name="boxStrokeColor">@color/background_btn_color</item>
        <item name="hintTextColor">@color/background_btn_color</item>
    </style>

    <style name="BlueAddFab">
        <item name="background">@drawable/plus_button</item>
        <item name="backgroundTint">@color/background_btn_color</item>
        <item name="srcCompat">@android:drawable/ic_input_add</item>
        <item name="tint">@color/white</item>
    </style>


    <style name="OutlinedButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="backgroundTint">@color/background_btn_color</item>
        <item name="cornerRadius">@dimen/sp_8</item>
        <item name="android:padding">@dimen/dp_16</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

</resources>
